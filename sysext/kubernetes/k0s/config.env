# Directory configuration
SYSEXT_OVERLAY_DIR="sysext-overlay"
CONFEXT_OVERLAY_DIR="confext-overlay"
OUTPUT_DIR="output"

# Binary versions configuration for k0s
# Set to specific version (e.g., "v3.5.17"), "latest", or leave empty to skip

# Kubernetes components
KUBE_APISERVER_VERSION="latest"
KUBE_APISERVER_DEST="${SYSEXT_OVERLAY_DIR}/usr/bin/kube-apiserver"
KUBE_CONTROLLER_MANAGER_VERSION="latest"
KUBE_CONTROLLER_MANAGER_DEST="${SYSEXT_OVERLAY_DIR}/usr/bin/kube-controller-manager"
KUBE_SCHEDULER_VERSION="latest"
KUBE_SCHEDULER_DEST="${SYSEXT_OVERLAY_DIR}/usr/bin/kube-scheduler"
KUBELET_VERSION="latest"
KUBELET_DEST="${SYSEXT_OVERLAY_DIR}/usr/bin/kubelet"

# Container runtime
CONTAINERD_VERSION="latest:v1.7"
CONTAINERD_DEST="${SYSEXT_OVERLAY_DIR}/usr/bin"
RUNC_VERSION="latest"
RUNC_DEST="${SYSEXT_OVERLAY_DIR}/usr/bin/runc"

# Datastore
ETCD_VERSION="latest"
ETCD_DEST="${SYSEXT_OVERLAY_DIR}/usr/bin"

# k0s binary
K0S_VERSION="release-1.34"
K0S_REPO="https://github.com/k0sproject/k0s.git"

# Sysext configuration
SYSEXT_NAME="k0s"
ID="_any"
VERSION_ID="_any"
# Detect architecture at runtime
ARCHITECTURE="$(uname -m)"
SYSEXT_LEVEL="2"
SYSEXT_SCOPE="system portable"
